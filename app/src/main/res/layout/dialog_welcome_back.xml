<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="320dp"
    android:layout_height="wrap_content"
    android:background="@drawable/welcome_dialog_background"
    android:padding="0dp">

    <!-- Top Star -->
    <ImageView
        android:id="@+id/imgTopStar"
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:src="@drawable/ic_star_filled"
        android:layout_marginTop="-30dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:tint="@color/mz_accent_yellow" />

    <!-- Welcome Back Title -->
    <TextView
        android:id="@+id/tvWelcomeTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WELCOME BACK !"
        android:textColor="@color/mz_navy_dark"
        android:textSize="18sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.05"
        android:layout_marginTop="20dp"
        android:background="@drawable/welcome_title_background"
        android:paddingHorizontal="24dp"
        android:paddingVertical="12dp"
        app:layout_constraintTop_toBottomOf="@id/imgTopStar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.8" />

    <!-- Motivational Message -->
    <TextView
        android:id="@+id/tvMotivationMessage"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="WELL DONE!\nYOU NOW HAVE A 3 DAY STREAK!"
        android:textColor="@color/mz_white"
        android:textSize="14sp"
        android:textStyle="bold"
        android:gravity="center"
        android:letterSpacing="0.02"
        android:lineSpacingExtra="2dp"
        android:layout_marginTop="24dp"
        app:layout_constraintTop_toBottomOf="@id/tvWelcomeTitle"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.85" />

    <!-- Streak Stars Container -->
    <LinearLayout
        android:id="@+id/llStreakStars"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/tvMotivationMessage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:id="@+id/star1"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled"
            android:layout_marginEnd="8dp"
            app:tint="@color/mz_accent_yellow" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled"
            android:layout_marginEnd="8dp"
            app:tint="@color/mz_accent_yellow" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_filled"
            android:layout_marginEnd="8dp"
            app:tint="@color/mz_accent_yellow" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_outline"
            android:alpha="0.6"
            android:layout_marginEnd="8dp"
            app:tint="@color/mz_white" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@drawable/ic_star_outline"
            android:alpha="0.6"
            app:tint="@color/mz_white" />

    </LinearLayout>

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="0dp"
        android:layout_height="48dp"
        android:text="COLLECT AND\nCONTINUE"
        android:textColor="@color/mz_navy_dark"
        android:textSize="12sp"
        android:textStyle="bold"
        android:letterSpacing="0.05"
        android:backgroundTint="@color/mz_white"
        app:cornerRadius="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginBottom="24dp"
        app:layout_constraintTop_toBottomOf="@id/llStreakStars"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.7" />

</androidx.constraintlayout.widget.ConstraintLayout>