<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".WordDetailActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a237e">

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Mascot Icon -->
            <FrameLayout
                android:id="@+id/logoHolder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rhino_bg"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgRhino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:contentDescription="App mascot"
                    android:padding="4dp"
                    android:scaleType="centerInside"
                    android:src="@drawable/rhino" />
            </FrameLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:clickable="true"
                android:contentDescription="Menu"
                android:focusable="true"
                android:src="@drawable/ic_menu_lines"
                app:layout_constraintBottom_toBottomOf="@id/logoHolder"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Page Title -->
        <TextView
            android:id="@+id/tv_words_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            android:gravity="center"
            android:text="WORDS / WOORDE"
            android:textColor="@android:color/white"
            android:textSize="28sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout" />

        <!-- Category Title -->
        <TextView
            android:id="@+id/tv_category_subtitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:gravity="center"
            android:text="Emotions / Emosies"
            android:textColor="#FFD700"
            android:textSize="24sp"
            android:textStyle="bold"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_words_title" />

        <!-- Main Content Card -->
        <androidx.cardview.widget.CardView
            android:id="@+id/main_card"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="24dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="24dp"
            android:layout_marginBottom="24dp"
            app:cardBackgroundColor="#9FA8DA"
            app:cardCornerRadius="20dp"
            app:cardElevation="8dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/tv_category_subtitle">

            <!-- Scrollable content -->
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="24dp">

                    <!-- English Word Display -->
                    <TextView
                        android:id="@+id/tv_word_english"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:gravity="center"
                        android:text="Happy?"
                        android:textColor="#FFD700"
                        android:textSize="32sp"
                        android:textStyle="bold"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent" />

                    <!-- Word Image -->
                    <ImageView
                        android:id="@+id/img_word"
                        android:layout_width="140dp"
                        android:layout_height="140dp"
                        android:layout_marginTop="16dp"
                        android:contentDescription="Word illustration"
                        android:scaleType="centerInside"
                        android:src="@drawable/rhino_happy"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/tv_word_english" />

                    <!-- Sound Button -->
                    <ImageView
                        android:id="@+id/btn_sound"
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:layout_marginTop="12dp"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:contentDescription="Play pronunciation"
                        android:focusable="true"
                        android:padding="8dp"
                        android:src="@drawable/ic_volume_up"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/img_word"
                        app:tint="@android:color/white" />

                    <!-- Multiple Choice Options -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_option1"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginEnd="8dp"
                        android:text="Gelukkig"
                        android:textColor="#1a237e"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="28dp"
                        app:layout_constraintEnd_toStartOf="@id/guideline_center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_sound"
                        app:strokeColor="#1a237e"
                        app:strokeWidth="2dp" />

                    <androidx.constraintlayout.widget.Guideline
                        android:id="@+id/guideline_center"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        app:layout_constraintGuide_percent="0.5" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_option2"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="24dp"
                        android:text="Hartseer"
                        android:textColor="#1a237e"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="28dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline_center"
                        app:layout_constraintTop_toBottomOf="@id/btn_sound"
                        app:strokeColor="#1a237e"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_option3"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="16dp"
                        android:layout_marginEnd="8dp"
                        android:text="Woede"
                        android:textColor="#1a237e"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="28dp"
                        app:layout_constraintEnd_toStartOf="@id/guideline_center"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_option1"
                        app:strokeColor="#1a237e"
                        app:strokeWidth="2dp" />

                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_option4"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginTop="16dp"
                        android:text="Vrees"
                        android:textColor="#1a237e"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="@android:color/white"
                        app:cornerRadius="28dp"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="@id/guideline_center"
                        app:layout_constraintTop_toBottomOf="@id/btn_option2"
                        app:strokeColor="#1a237e"
                        app:strokeWidth="2dp" />

                    <!-- Submit Button (Hidden initially, shows after selection) -->
                    <com.google.android.material.button.MaterialButton
                        android:id="@+id/btn_submit"
                        android:layout_width="0dp"
                        android:layout_height="56dp"
                        android:layout_marginTop="24dp"
                        android:text="Submit"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:backgroundTint="#7CB342"
                        android:visibility="gone"
                        app:cornerRadius="28dp"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toBottomOf="@id/btn_option3" />

                </androidx.constraintlayout.widget.ConstraintLayout>
            </ScrollView>
        </androidx.cardview.widget.CardView>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/mz_navy_dark"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:paddingHorizontal="24dp">

        <!-- App Logo/Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="start">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FDD835">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rhino"
                    android:padding="8dp"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Navigation Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Home -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="HOME"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Language -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LANGUAGE"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Words -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="WORDS"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Phrases -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_phrases"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PHRASES"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Progress -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PROGRESS"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Visibility Modes -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="33dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_visibility"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VISIBILITY\nMODES"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SETTINGS"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Profile -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PROFILE"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Navigation Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp">

            <!-- Dictionary/ABC Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FDD835"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nav_dictionary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_book_open"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Dictionary"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.cardview.widget.CardView>

            <!-- Back Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nav_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_left"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Back"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/mz_navy_dark" />

            </androidx.cardview.widget.CardView>

            <!-- Chat Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nav_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_message_circle"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="Chat"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/mz_navy_dark" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>

