<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SetGoalsActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a237e">

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Mascot Icon -->
            <FrameLayout
                android:id="@+id/logoHolder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rhino"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgRhino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rhino"
                    android:scaleType="centerInside"
                    android:contentDescription="App mascot"
                    android:padding="4dp" />

            </FrameLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_lines"
                android:contentDescription="Menu"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/logoHolder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Page Title -->
        <androidx.cardview.widget.CardView
            android:id="@+id/title_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="24dp"
            app:cardCornerRadius="24dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout">

            <TextView
                android:id="@+id/tv_page_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="12dp"
                android:gravity="center"
                android:text="SET GOALS / STEL DOELWITTE"
                android:textColor="#1a237e"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- Scrollable Content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="24dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="24dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/title_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Progress Display Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="TODAY'S PROGRESS"
                            android:textColor="#1a237e"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_current_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="TODAY: 0 words, 0 phrases correct"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:layout_marginBottom="8dp" />

                        <TextView
                            android:id="@+id/tv_goal_progress"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PROGRESS: Words 0% | Phrases 0%"
                            android:textColor="#1a237e"
                            android:textSize="14sp"
                            android:textStyle="bold" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Words Goal Setting Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#8BC34A"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DAILY WORDS GOAL"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <Button
                                android:id="@+id/btn_words_decrease"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="−"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/button_navy_circle"
                                android:layout_marginEnd="20dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="16dp"
                                app:cardBackgroundColor="#FFFFFF">

                                <TextView
                                    android:id="@+id/tv_words_goal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="10"
                                    android:textColor="#8BC34A"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <Button
                                android:id="@+id/btn_words_increase"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="+"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/button_navy_circle"
                                android:layout_marginStart="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Phrases Goal Setting Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:cardCornerRadius="16dp"
                    app:cardBackgroundColor="#8BC34A"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="DAILY PHRASES GOAL"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:gravity="center"
                            android:layout_marginBottom="16dp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <Button
                                android:id="@+id/btn_phrases_decrease"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="−"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/button_navy_circle"
                                android:layout_marginEnd="20dp" />

                            <androidx.cardview.widget.CardView
                                android:layout_width="120dp"
                                android:layout_height="80dp"
                                app:cardCornerRadius="16dp"
                                app:cardBackgroundColor="#FFFFFF">

                                <TextView
                                    android:id="@+id/tv_phrases_goal"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="5"
                                    android:textColor="#8BC34A"
                                    android:textSize="32sp"
                                    android:textStyle="bold"
                                    android:gravity="center" />

                            </androidx.cardview.widget.CardView>

                            <Button
                                android:id="@+id/btn_phrases_increase"
                                android:layout_width="60dp"
                                android:layout_height="60dp"
                                android:text="+"
                                android:textSize="24sp"
                                android:textStyle="bold"
                                android:textColor="#FFFFFF"
                                android:background="@drawable/button_navy_circle"
                                android:layout_marginStart="20dp" />

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Action Buttons -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <!-- Save Goals Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_save_goals"
                        android:layout_width="match_parent"
                        android:layout_height="64dp"
                        android:layout_marginBottom="16dp"
                        android:background="@drawable/button_green_rounded"
                        android:drawableStart="@drawable/ic_check"
                        android:drawablePadding="12dp"
                        android:paddingHorizontal="24dp"
                        android:text="SAVE GOALS"
                        android:textColor="#FFD700"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Reset to Default Button -->
                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_reset_default"
                        android:layout_width="match_parent"
                        android:layout_height="56dp"
                        android:layout_marginBottom="32dp"
                        android:background="@drawable/button_white_rounded"
                        android:drawableStart="@drawable/ic_refresh"
                        android:drawablePadding="12dp"
                        android:paddingHorizontal="24dp"
                        android:text="RESET TO DEFAULT"
                        android:textColor="#1a237e"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

        <!-- ACHIEVEMENT POPUP OVERLAY - Updated with proper theme colors -->
        <androidx.cardview.widget.CardView
            android:id="@+id/achievement_popup"
            android:layout_width="320dp"
            android:layout_height="wrap_content"
            android:layout_margin="24dp"
            android:visibility="gone"
            app:cardCornerRadius="24dp"
            app:cardElevation="16dp"
            app:cardBackgroundColor="#8BC34A"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="24dp">

                <!-- Achievement Badge - White circle with check -->
                <androidx.cardview.widget.CardView
                    android:id="@+id/achievement_badge_card"
                    android:layout_width="100dp"
                    android:layout_height="100dp"
                    app:cardCornerRadius="50dp"
                    app:cardBackgroundColor="#FFFFFF"
                    app:cardElevation="8dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent">

                    <ImageView
                        android:id="@+id/achievement_badge"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:src="@drawable/ic_check"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        app:tint="#8BC34A" />

                </androidx.cardview.widget.CardView>

                <!-- Achievement Title -->
                <TextView
                    android:id="@+id/achievement_title"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="DAILY LEGEND!"
                    android:textColor="#FFFFFF"
                    android:textSize="28sp"
                    android:textStyle="bold"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/achievement_badge_card"/>

                <!-- Achievement Message -->
                <TextView
                    android:id="@+id/achievement_message"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="12dp"
                    android:gravity="center"
                    android:text="INCREDIBLE! Both goals achieved!\nYou're unstoppable today!"
                    android:textColor="#FFFFFF"
                    android:textSize="16sp"
                    android:lineSpacingExtra="4dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/achievement_title" />

                <!-- Tap to dismiss hint -->
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:gravity="center"
                    android:text="Tap to dismiss"
                    android:textColor="#E8F5E8"
                    android:textSize="12sp"
                    android:textStyle="italic"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/achievement_message" />

            </androidx.constraintlayout.widget.ConstraintLayout>

        </androidx.cardview.widget.CardView>

        <!-- Enhanced Falling Stars - More visible and better positioned -->
        <ImageView
            android:id="@+id/star1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="30dp"
            android:layout_marginTop="180dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star2"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="25dp"
            android:layout_marginTop="200dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star3"
            android:layout_width="44dp"
            android:layout_height="44dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="160dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star4"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="80dp"
            android:layout_marginTop="140dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star5"
            android:layout_width="42dp"
            android:layout_height="42dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="70dp"
            android:layout_marginTop="130dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star6"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="120dp"
            android:layout_marginTop="220dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star7"
            android:layout_width="46dp"
            android:layout_height="46dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="150dp"
            app:tint="#FFD700" />

        <ImageView
            android:id="@+id/star8"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:src="@drawable/ic_star"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="60dp"
            android:layout_marginTop="240dp"
            app:tint="#FFD700" />

        <!-- Enhanced Confetti pieces - Larger and more colorful -->
        <androidx.cardview.widget.CardView
            android:id="@+id/confetti1"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#FF6B35"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="40dp"
            android:layout_marginTop="280dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti2"
            android:layout_width="16dp"
            android:layout_height="24dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#2196F3"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="45dp"
            android:layout_marginTop="260dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti3"
            android:layout_width="20dp"
            android:layout_height="14dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#E91E63"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="250dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti4"
            android:layout_width="16dp"
            android:layout_height="16dp"
            app:cardCornerRadius="8dp"
            app:cardBackgroundColor="#9C27B0"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="100dp"
            android:layout_marginTop="290dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti5"
            android:layout_width="14dp"
            android:layout_height="22dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#4CAF50"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="90dp"
            android:layout_marginTop="270dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti6"
            android:layout_width="22dp"
            android:layout_height="12dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#FFC107"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="70dp"
            android:layout_marginTop="310dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti7"
            android:layout_width="18dp"
            android:layout_height="18dp"
            app:cardCornerRadius="9dp"
            app:cardBackgroundColor="#FF9800"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="60dp"
            android:layout_marginTop="300dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti8"
            android:layout_width="20dp"
            android:layout_height="16dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#00BCD4"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="130dp"
            android:layout_marginTop="270dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti9"
            android:layout_width="16dp"
            android:layout_height="20dp"
            app:cardCornerRadius="2dp"
            app:cardBackgroundColor="#CDDC39"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginEnd="120dp"
            android:layout_marginTop="310dp" />

        <androidx.cardview.widget.CardView
            android:id="@+id/confetti10"
            android:layout_width="14dp"
            android:layout_height="14dp"
            app:cardCornerRadius="7dp"
            app:cardBackgroundColor="#F44336"
            app:cardElevation="4dp"
            android:visibility="gone"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginStart="150dp"
            android:layout_marginTop="250dp" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/mz_navy_dark"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:paddingHorizontal="24dp">

        <!-- App Logo/Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="start">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FDD835">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rhino"
                    android:padding="8dp"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Navigation Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Home -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="HOME"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Language -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
