<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NotificationActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/mz_navy_dark">

        <!-- Header -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/nav_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="Back"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true"/>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_lines"
                android:contentDescription="Menu"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                android:clickable="true"
                android:focusable="true" />

            <!-- Title -->
            <TextView
                android:id="@+id/tv_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="NOTIFICATIONS"
                android:textColor="@color/mz_yellow"
                android:textSize="20sp"
                android:textStyle="bold"
                android:gravity="center"
                app:layout_constraintStart_toEndOf="@id/nav_back"
                app:layout_constraintEnd_toStartOf="@id/btn_menu"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"/>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- ScrollView for main content -->
        <ScrollView
            android:layout_width="0dp"
            android:layout_height="0dp"
            app:layout_constraintTop_toBottomOf="@id/header_layout"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toTopOf="@id/bottom_navigation"
            android:layout_marginTop="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <!-- Notification Settings Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="16dp"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/mz_white"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Daily Learning Reminders"
                            android:textColor="@color/mz_navy_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- Morning Reminder -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@drawable/rounded_background">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸŒ… Morning Reminder"
                                    android:textColor="@color/mz_navy_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Daily reminder at 7:00 AM"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <Switch
                                android:id="@+id/switch_morning_reminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <!-- Evening Reminder -->
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical"
                            android:layout_marginBottom="16dp"
                            android:padding="12dp"
                            android:background="@drawable/rounded_background">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:orientation="vertical">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="ðŸŒ™ Evening Reminder"
                                    android:textColor="@color/mz_navy_dark"
                                    android:textSize="16sp"
                                    android:textStyle="bold" />

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Daily reminder at 6:00 PM"
                                    android:textColor="#666666"
                                    android:textSize="14sp" />

                            </LinearLayout>

                            <Switch
                                android:id="@+id/switch_evening_reminder"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:checked="true" />

                        </LinearLayout>

                        <!-- Test Button -->
                        <Button
                            android:id="@+id/btn_test_notification"
                            android:layout_width="match_parent"
                            android:layout_height="48dp"
                            android:text="ðŸš€ Test Notification"
                            android:textColor="@color/mz_white"
                            android:textStyle="bold"
                            android:background="@drawable/button_background"
                            android:backgroundTint="@color/mz_yellow" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <!-- Notification History Card -->
                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="12dp"
                    app:cardBackgroundColor="@color/mz_white"
                    app:cardElevation="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="20dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="ðŸ“¢ Notification History"
                            android:textColor="@color/mz_navy_dark"
                            android:textSize="18sp"
                            android:textStyle="bold"
                            android:layout_marginBottom="16dp" />

                        <!-- No Notifications Text -->
                        <TextView
                            android:id="@+id/tv_no_notifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="No notifications yet. Enable reminders above to start receiving daily motivation!"
                            android:textColor="#666666"
                            android:textSize="14sp"
                            android:gravity="center"
                            android:padding="20dp"
                            android:visibility="gone" />

                        <!-- RecyclerView for notification history -->
                        <androidx.recyclerview.widget.RecyclerView
                            android:id="@+id/recycler_notifications"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:nestedScrollingEnabled="false" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </ScrollView>

        <!-- Bottom Navigation -->
        <LinearLayout
            android:id="@+id/bottom_navigation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@color/mz_white"
            android:padding="12dp"
            android:gravity="center"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/btn_bottom_dict"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_book"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/mz_navy_dark" />

            <ImageView
                android:id="@+id/btn_bottom_quotes"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_quote"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/mz_navy_dark" />

            <ImageView
                android:id="@+id/btn_bottom_stats"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_bar_chart"
                android:layout_marginHorizontal="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/mz_navy_dark" />

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/mz_navy_dark"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:paddingHorizontal="24dp">

        <!-- App Logo/Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="start">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FDD835">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rhino"
                    android:padding="8dp"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Navigation Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Home -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="HOME"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Language -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="LANGUAGE"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Words -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="WORDS"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Phrases -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_phrases"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PHRASES"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Progress -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PROGRESS"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Visibility -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="66dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="33dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_visibility"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="VISIBILITY\nMODES"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="SETTINGS"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

            <!-- Profile -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">
                <TextView
                    android:id="@+id/nav_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="PROFILE"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Navigation Icons in Drawer -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp">

            <ImageView
                android:id="@+id/nav_dictionary"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_book"
                android:layout_marginEnd="16dp"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/mz_white" />

            <ImageView
                android:id="@+id/nav_chat"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_chat"
                android:clickable="true"
                android:focusable="true"
                android:background="?android:attr/selectableItemBackgroundBorderless"
                android:padding="8dp"
                app:tint="@color/mz_white" />

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>