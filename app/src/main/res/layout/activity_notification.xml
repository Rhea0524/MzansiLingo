<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LanguageSelectionActivity">

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#1a237e">

        <!-- Header Section -->
        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/header_layout"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <!-- Back Button -->
            <ImageView
                android:id="@+id/btn_back"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_arrow_left"
                android:contentDescription="@string/cd_back"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/logoHolder"
                app:tint="#FFFFFF" />

            <!-- Mascot Icon -->
            <FrameLayout
                android:id="@+id/logoHolder"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:background="@drawable/rhino"
                app:layout_constraintStart_toEndOf="@id/btn_back"
                app:layout_constraintEnd_toStartOf="@id/btn_menu"
                app:layout_constraintTop_toTopOf="parent">

                <ImageView
                    android:id="@+id/imgRhino"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rhino"
                    android:scaleType="centerInside"
                    android:contentDescription="@string/cd_mascot"
                    android:padding="4dp" />

            </FrameLayout>

            <!-- Menu Button -->
            <ImageView
                android:id="@+id/btn_menu"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/ic_menu_lines"
                android:contentDescription="@string/cd_menu"
                android:clickable="true"
                android:focusable="true"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="@id/logoHolder" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <!-- Language Selection Header -->
        <androidx.cardview.widget.CardView
            android:id="@+id/language_header_card"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="32dp"
            app:cardBackgroundColor="#FFFFFF"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/header_layout">

            <TextView
                android:id="@+id/tv_language_header"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="32dp"
                android:layout_marginVertical="16dp"
                android:gravity="center"
                android:text="@string/select_language_header"
                android:textColor="#1a237e"
                android:textSize="18sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <!-- Language Selection Form -->
        <androidx.cardview.widget.CardView
            android:id="@+id/language_form_card"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="32dp"
            android:layout_marginEnd="24dp"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#FFFFFF"
            app:cardElevation="8dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@id/language_header_card">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <!-- Home Language Section -->
                <TextView
                    android:id="@+id/tv_home_lang_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_language_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_home_lang_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/home_language_subtitle"
                    android:textColor="#757575"
                    android:textSize="14sp"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <com.google.android.material.textfield.TextInputLayout
                    android:id="@+id/til_home_lang"
                    style="@style/Widget.MaterialComponents.TextInputLayout.FilledBox.ExposedDropdownMenu"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="24dp"
                    app:boxBackgroundColor="#F5F5F5"
                    app:boxStrokeColor="#FFD700"
                    app:hintTextColor="#1a237e">

                    <AutoCompleteTextView
                        android:id="@+id/actv_home_lang"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="@string/select_home_language_hint"
                        android:inputType="none"
                        android:textColor="#1a237e"
                        android:textSize="16sp" />

                </com.google.android.material.textfield.TextInputLayout>

                <!-- Divider -->
                <View
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:background="#E0E0E0"
                    android:layout_marginVertical="16dp" />

                <!-- Learn Language Section (Fixed) -->
                <TextView
                    android:id="@+id/tv_learn_lang_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/learning_language_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="12dp"
                    android:gravity="center" />

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardCornerRadius="8dp"
                    app:cardBackgroundColor="#E8F5E9"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="16dp"
                        android:gravity="center">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/afrikaans"
                            android:textColor="#1a237e"
                            android:textSize="24sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="4dp"
                            android:text="@string/app_teaches_afrikaans"
                            android:textColor="#757575"
                            android:textSize="14sp" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <!-- Save Button -->
        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_save"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:layout_marginStart="48dp"
            android:layout_marginEnd="48dp"
            android:layout_marginBottom="24dp"
            android:background="@drawable/button_green_rounded"
            android:text="@string/save_language"
            android:textColor="#FFD700"
            android:textSize="18sp"
            android:textStyle="bold"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Navigation Drawer -->
    <LinearLayout
        android:id="@+id/nav_drawer"
        android:layout_width="280dp"
        android:layout_height="match_parent"
        android:layout_gravity="end"
        android:background="@color/mz_navy_dark"
        android:orientation="vertical"
        android:paddingTop="48dp"
        android:paddingHorizontal="24dp">

        <!-- App Logo/Icon -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginBottom="24dp"
            android:gravity="start">

            <androidx.cardview.widget.CardView
                android:layout_width="60dp"
                android:layout_height="60dp"
                app:cardCornerRadius="8dp"
                app:cardBackgroundColor="#FDD835">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/rhino"
                    android:padding="8dp"
                    android:scaleType="fitCenter" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Navigation Items Container -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Home -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_home"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_home"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Language -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_language"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_language"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Words -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_words"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_words"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Phrases -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_phrases"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_phrases"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Progress -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_progress"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_progress"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Settings -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_settings"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_settings"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

            <!-- Profile -->
            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:layout_marginBottom="8dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardElevation="0dp">

                <TextView
                    android:id="@+id/nav_profile"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="@string/nav_profile"
                    android:textColor="@color/mz_navy_dark"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?android:attr/selectableItemBackground" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <!-- Bottom Navigation Icons -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="32dp"
            android:layout_marginBottom="24dp">

            <!-- Dictionary/ABC Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="#FDD835"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nav_dictionary"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_book_open"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/cd_dictionary"
                    android:clickable="true"
                    android:focusable="true" />

            </androidx.cardview.widget.CardView>

            <!-- Back Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_marginEnd="24dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nav_back"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_arrow_left"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/cd_back"
                    app:tint="@color/mz_navy_dark" />

            </androidx.cardview.widget.CardView>

            <!-- Chat Button -->
            <androidx.cardview.widget.CardView
                android:layout_width="56dp"
                android:layout_height="56dp"
                app:cardCornerRadius="28dp"
                app:cardBackgroundColor="@android:color/white"
                app:cardElevation="0dp">

                <ImageView
                    android:id="@+id/nav_chat"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:src="@drawable/ic_message_circle"
                    android:padding="12dp"
                    android:scaleType="fitCenter"
                    android:contentDescription="@string/cd_chat"
                    android:clickable="true"
                    android:focusable="true"
                    app:tint="@color/mz_navy_dark" />

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

</androidx.drawerlayout.widget.DrawerLayout>