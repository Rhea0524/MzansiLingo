<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1a237e"
    tools:context=".HelpSupportActivity">

    <!-- Header Section -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/header_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btn_back"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:src="@drawable/ic_arrow_left"
            android:contentDescription="@string/cd_back"
            android:clickable="true"
            android:focusable="true"
            android:background="?android:attr/selectableItemBackgroundBorderless"
            app:tint="#FFFFFF"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

        <!-- Mascot Icon -->
        <FrameLayout
            android:id="@+id/logoHolder"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:background="@drawable/rhino"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/imgRhino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rhino"
                android:scaleType="centerInside"
                android:contentDescription="@string/cd_mascot"
                android:padding="4dp" />

        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <!-- Title Card -->
    <androidx.cardview.widget.CardView
        android:id="@+id/title_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        app:cardCornerRadius="32dp"
        app:cardBackgroundColor="#FFFFFF"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/header_layout">

        <TextView
            android:id="@+id/tv_help_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="32dp"
            android:layout_marginVertical="16dp"
            android:gravity="center"
            android:text="@string/help_support_title"
            android:textColor="#1a237e"
            android:textSize="18sp"
            android:textStyle="bold" />

    </androidx.cardview.widget.CardView>

    <!-- Help & Support Content -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/title_card">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="16dp"
            app:cardBackgroundColor="#E8FFFFFF"
            app:cardElevation="4dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="24dp">

                <TextView
                    android:id="@+id/tv_help_title_main"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_support_title"
                    android:textColor="#1a237e"
                    android:textSize="20sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="16dp"
                    android:gravity="center" />

                <TextView
                    android:id="@+id/tv_help_subtitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_support_subtitle"
                    android:textColor="#666666"
                    android:textSize="14sp"
                    android:layout_marginBottom="20dp"
                    android:gravity="center" />

                <!-- Getting Started -->
                <TextView
                    android:id="@+id/tv_getting_started_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_getting_started_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_getting_started_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_getting_started_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Account Management -->
                <TextView
                    android:id="@+id/tv_account_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_account_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_account_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_account_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Learning Features -->
                <TextView
                    android:id="@+id/tv_learning_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_learning_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_learning_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_learning_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Technical Issues -->
                <TextView
                    android:id="@+id/tv_technical_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_technical_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_technical_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_technical_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Subscription & Billing -->
                <TextView
                    android:id="@+id/tv_subscription_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_subscription_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_subscription_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_subscription_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Progress Tracking -->
                <TextView
                    android:id="@+id/tv_progress_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_progress_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_progress_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_progress_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Offline Learning -->
                <TextView
                    android:id="@+id/tv_offline_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_offline_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_offline_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_offline_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Frequently Asked Questions -->
                <TextView
                    android:id="@+id/tv_faq_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_faq_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_faq_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_faq_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:layout_marginBottom="16dp"
                    android:lineSpacingExtra="2dp" />

                <!-- Contact Support -->
                <TextView
                    android:id="@+id/tv_contact_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_contact_title"
                    android:textColor="#1a237e"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:layout_marginBottom="8dp" />

                <TextView
                    android:id="@+id/tv_contact_text"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/help_contact_text"
                    android:textColor="#333333"
                    android:textSize="14sp"
                    android:lineSpacingExtra="2dp" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>