<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/mz_navy_dark"
    android:padding="24dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <!-- Rhino Logo -->
        <FrameLayout
            android:id="@+id/logoHolder"
            android:layout_width="140dp"
            android:layout_height="140dp"
            android:background="@drawable/rhino_bg"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/imgRhino"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/rhino"
                android:scaleType="centerInside"
                android:contentDescription="App logo"
                android:padding="10dp" />
        </FrameLayout>

        <!-- Email Label -->
        <TextView
            android:id="@+id/lblEmail"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="EMAIL"
            android:textAllCaps="true"
            android:textColor="@color/mz_label"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            android:layout_marginTop="24dp"
            app:layout_constraintTop_toBottomOf="@id/logoHolder"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Email Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilEmail"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter email"
            app:boxBackgroundColor="@color/mz_field_fill"
            app:boxCornerRadiusTopStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusBottomEnd="22dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etEmail"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textEmailAddress"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Password Label -->
        <TextView
            android:id="@+id/lblPassword"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="PASSWORD"
            android:textAllCaps="true"
            android:textColor="@color/mz_label"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tilEmail"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Password Input -->
        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilPassword"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Enter password"
            app:endIconMode="password_toggle"
            app:boxBackgroundColor="@color/mz_field_fill"
            app:boxCornerRadiusTopStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusBottomEnd="22dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <com.google.android.material.textfield.TextInputEditText
                android:id="@+id/etPassword"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="textPassword"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Home Language -->
        <TextView
            android:id="@+id/lblHomeLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="HOME LANGUAGE"
            android:textAllCaps="true"
            android:textColor="@color/mz_label"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tilPassword"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilHomeLang"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Home Language"
            app:endIconMode="dropdown_menu"
            app:boxBackgroundColor="@color/mz_field_fill"
            app:boxCornerRadiusTopStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusBottomEnd="22dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblHomeLang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/actvHomeLang"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Learn Language -->
        <TextView
            android:id="@+id/lblLearnLang"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="LANGUAGE I WANT TO LEARN"
            android:textAllCaps="true"
            android:textColor="@color/mz_label"
            android:textSize="12sp"
            android:letterSpacing="0.1"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tilHomeLang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <com.google.android.material.textfield.TextInputLayout
            android:id="@+id/tilLearnLang"
            style="@style/Widget.Material3.TextInputLayout.FilledBox.Dense"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:hint="Language"
            app:endIconMode="dropdown_menu"
            app:boxBackgroundColor="@color/mz_field_fill"
            app:boxCornerRadiusTopStart="22dp"
            app:boxCornerRadiusTopEnd="22dp"
            app:boxCornerRadiusBottomStart="22dp"
            app:boxCornerRadiusBottomEnd="22dp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/lblLearnLang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <AutoCompleteTextView
                android:id="@+id/actvLearnLang"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:inputType="none"/>
        </com.google.android.material.textfield.TextInputLayout>

        <!-- Google Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGoogleLogin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Login with Google"
            android:textColor="@color/mz_white"
            android:textSize="16sp"
            android:drawableEnd="@drawable/ic_google"
            android:drawablePadding="12dp"
            android:gravity="center"
            android:paddingStart="20dp"
            android:paddingEnd="50dp"
            android:layout_marginTop="24dp"
            android:backgroundTint="@android:color/transparent"
            app:strokeColor="@color/mz_white"
            app:strokeWidth="2dp"
            app:cornerRadius="28dp"
            style="@style/Widget.Material3.Button.OutlinedButton"
            app:layout_constraintTop_toBottomOf="@id/tilLearnLang"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Login Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnLogin"
            android:layout_width="0dp"
            android:layout_height="56dp"
            android:text="Login"
            android:textColor="@color/mz_white"
            android:textSize="16sp"
            android:textStyle="bold"
            android:backgroundTint="@color/mz_accent_green"
            app:cornerRadius="28dp"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/btnGoogleLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <!-- Sign up link -->
        <TextView
            android:id="@+id/tvSignUpLink"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Don't have an account? Sign up"
            android:textColor="@color/mz_white"
            android:textSize="14sp"
            android:layout_marginTop="12dp"
            android:background="?android:attr/selectableItemBackground"
            android:clickable="true"
            android:focusable="true"
            android:gravity="center"
            android:minWidth="200dp"
            android:minHeight="48dp"
            android:paddingHorizontal="16dp"
            android:paddingVertical="12dp"
            app:layout_constraintTop_toBottomOf="@id/btnLogin"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>
