<resources>
    <style name="Theme.MzansiLingo" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- System bars -->
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@color/mz_white</item>

        <!-- Material 3 color tokens -->
        <item name="colorPrimary">@color/mz_accent_green</item>
        <item name="colorOnPrimary">@color/mz_white</item>
        <item name="colorSecondary">@color/mz_yellow</item>
        <item name="colorOnSecondary">@color/mz_navy_dark</item>

        <!-- Surface colors -->
        <item name="colorSurface">@color/mz_light_gray</item>
        <item name="colorOnSurface">@color/mz_navy_dark</item>
        <item name="colorSurfaceVariant">@color/mz_label</item>
        <item name="colorOnSurfaceVariant">@color/mz_navy_dark</item>
    </style>
</resources>